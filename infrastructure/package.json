{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/[^/]+\\.test\\.ts$",
    "test:integration": "jest --testPathPattern=test/integration/",
    "test:phase1": "jest --testPathPattern=test/phase1/",
    "test:phase1:unit": "jest --testPathPattern=test/phase1/.*\\.test\\.ts$",
    "test:phase1:integration": "jest --testPathPattern=test/phase1/auth\\.integration\\.test\\.ts$",
    "test:phase1:deployment": "node test/phase1/test-deployment.js",
    "test:phase1:minimal": "node test/phase1/test-minimal.js",
    "test:phase1:subphase-1.1": "jest --testPathPattern=test/phase1/subphase-1\\.1/",
    "test:phase1:subphase-1.2": "jest --testPathPattern=test/phase1/subphase-1\\.2/",
    "test:phase1:subphase-1.3": "jest --testPathPattern=test/phase1/subphase-1\\.3/",
    "test:phase1:subphase-1.4": "jest --testPathPattern=test/phase1/subphase-1\\.4/",
    "test:phase1:all": "node test/phase1/run-all-tests.js",
    "test:regression:phase1": "npm run test:phase1:unit",
    "create-test-users": "ts-node scripts/create-test-users.ts",
    "cdk": "cdk",
    "synth": "cdk synth",
    "synth:dev": "cdk synth -c stage=dev",
    "synth:staging": "cdk synth -c stage=staging",
    "synth:prod": "cdk synth -c stage=prod",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all -c stage=dev",
    "deploy:staging": "cdk deploy --all -c stage=staging",
    "deploy:prod": "cdk deploy --all -c stage=prod --require-approval never",
    "diff": "cdk diff --all",
    "destroy": "cdk destroy --all",
    "bootstrap": "cdk bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "aws-cdk": "2.1019.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "dotenv": "^16.0.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.201.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "@aws-sdk/client-cognito-identity": "^3.0.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-sts": "^3.0.0"
  }
}
